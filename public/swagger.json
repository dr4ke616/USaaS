{
    "swagger": "2.0",
    "info": {
        "title": "Url Shortener As A Service",
        "description": "App to provide shortned urls",
        "version": "1.0.0"
    },
    "schemes": [
        "http"
    ],
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/short-url/hash": {
            "put": {
                "description": "Create a short URL entry.\n",
                "tags": [
                    "Short Url"
                ],
                "responses": {
                    "201": {
                        "description": "Create a new Url redirect",
                        "schema": {
                            "$ref": "#/definitions/ShortUrl"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Issue"
                        }
                    }
                }
            }
        },
        "/short-url/hash/{id}": {
            "get": {
                "description": "Get original URL using hash.",
                "parameters": [
                    {
                        "name": "id",
                        "description": "The raw ID of the redirect",
                        "in": "path",
                        "type": "integer",
                        "format": "int32",
                        "required": true
                    }
                ],
                "tags": [
                    "Short Url"
                ],
                "responses": {
                    "200": {
                        "description": "An object containing the full redirect path and the original url",
                        "schema": {
                            "$ref": "#/definitions/ShortUrl"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Issue"
                        }
                    }
                }
            }
        },
        "/{hash}": {
            "get": {
                "description": "The redirect endpoint.",
                "parameters": [
                    {
                        "name": "hash",
                        "description": "The hash code to be used for the bases for the redirect",
                        "in": "path",
                        "type": "string",
                        "required": true
                    }
                ],
                "tags": [
                    "Redirect"
                ],
                "responses": {
                    "303": {
                        "description": "See Other - Header will contain location to proxied url"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Issue"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "ShortUrl": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int32",
                    "description": "The ID"
                },
                "original_url": {
                    "type": "string",
                    "description": "Original url"
                },
                "hash": {
                    "type": "string",
                    "description": "The hash for the URL"
                }
            }
        },
        "Issue": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}